<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <LinearLayout
        android:paddingTop="0dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_weight="0.09">

        <ImageView
            android:layout_gravity="center"
            android:layout_width="@dimen/profile_picture_width"
            android:layout_height="@dimen/profile_picture_width"
            android:id="@+id/profile_pic_request"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:src="@mipmap/ic_manage_profile"
            android:scaleType="centerInside"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:weightSum="1">

            <TextView
                android:layout_gravity="center"
                android:paddingTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Large Text"
                android:textSize="20sp"
                android:id="@+id/tv_purchase_req_sender"
                android:layout_weight="0.19" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Description of items"
                android:id="@+id/tv_purchase_request_desc"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.45" />
        </LinearLayout>

        <TextView
            android:paddingTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Small Text"
            android:textSize="12sp"
            android:id="@+id/tv_purchase_request_date" />
    </LinearLayout>

</LinearLayout>