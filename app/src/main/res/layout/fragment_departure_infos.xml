<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/departure_layout"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.andela.helpmebuy.activities.CreateTravelActivityFragment">

    <include layout="@layout/travel_infos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <FrameLayout
        android:id="@+id/page_indicators"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="@dimen/item_padding">
                <ImageView
                    android:layout_width="@dimen/page_indicator_size"
                    android:layout_height="@dimen/page_indicator_size"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_panorama_fish_eye_black_48dp"
                    android:alpha="0.5"/>
                <ImageView
                    android:layout_width="@dimen/page_indicator_size"
                    android:layout_height="@dimen/page_indicator_size"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_fiber_manual_record_black_48dp"
                    android:alpha="0.5"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:background="@color/primary_color">

                <ImageView
                    android:id="@+id/next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/icon_padding"
                    android:clickable="true"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_navigate_next_white_48dp"
                    android:background="@drawable/white_view_state_list"
                    android:onClick="displayArrivalDetails"/>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

</LinearLayout>
